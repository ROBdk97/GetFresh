<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fresh.getfresh">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/iconr"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Kochbuch"
            android:screenOrientation="portrait"
            android:label="Kochbuch"/>
        <activity
            android:name=".Rezept_Info"
            android:screenOrientation="portrait"
            android:label="Rezept Details"/>
        <activity
            android:name=".Training_main"
            android:screenOrientation="portrait"
            android:label="Training"/>
        <activity
            android:name=".Test_main"
            android:screenOrientation="portrait"
            android:label="Test"/>
    </application>

</manifest>